# ===== REQUIRED SETTINGS =====
# Get from @BotFather on Telegram
BOT_TOKEN=your_bot_token_here

# Get from @userinfobot on Telegram
ADMIN_ID=your_user_id_here

# ===== PAYMENT SETTINGS =====
# Stripe Payment Gateway (Optional)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
PAYMENT_PROVIDER=stripe

# ===== SERVER SETTINGS =====
# Port for web server (default: 3000)
PORT=3000

# Webhook URL for production (Heroku will auto-fill)
WEBHOOK_URL=https://your-app-name.herokuapp.com

# ===== DATABASE SETTINGS =====
# File paths for JSON databases
USERS_FILE=./data/users.json
PRODUCTS_FILE=./data/products.json
ORDERS_FILE=./data/orders.json

# ===== BOT SETTINGS =====
# Currency settings
CURRENCY=USD
CURRENCY_SYMBOL=$

# Minimum order amount
MIN_ORDER_AMOUNT=1

# Shipping fee
SHIPPING_FEE=5.00

# Tax rate (percentage)
TAX_RATE=8.0

# ===== LOGGING =====
# Log level: debug, info, warn, error
LOG_LEVEL=info

# ===== SECURITY =====
# Session timeout in hours
SESSION_TIMEOUT_HOURS=24

# Maximum failed login attempts
MAX_LOGIN_ATTEMPTS=5

# ===== NOTIFICATIONS =====
# Send order notifications to admin
ADMIN_NOTIFICATIONS=true

# Send order updates to customers
CUSTOMER_NOTIFICATIONS=true
